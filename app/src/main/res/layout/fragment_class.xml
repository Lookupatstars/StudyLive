<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ClassFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/tab_text_selected">
        <ImageView
            android:id="@+id/iv_classify"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/classify_selected"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/iv_classify"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>


        <ImageView
            android:id="@+id/iv_study_latest"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/study_latest_selected"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/search_selected"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_study_latest"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/scan_selected"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_search"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <com.aaron.studylive.views.RefreshListView
        android:id="@+id/refresh_listview_class"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none" />

</LinearLayout>