<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activitys.MyCommentActivity">

    <RelativeLayout
        android:id="@+id/ll_my_comment_topTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_my_comment_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_toRightOf="@+id/iv_my_comment_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的评论"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="center"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_my_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_my_comment_topTab"
        android:layout_marginTop="21dp" />

</RelativeLayout>